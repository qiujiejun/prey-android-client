<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_header"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/top_prey"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/icon_prey_reverse" />

    <ImageView
        android:id="@+id/top_right_success"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_prey"
                android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/icon_extra" />

    <TextView
        android:id="@+id/congrats_h1_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/top_right_success"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/disable_power_title_h1"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <CheckBox 
        android:id="@+id/disable_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/congrats_h1_text"
        android:text="@string/disable_power_body_text"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        android:textColor="@color/dark_paragraph"
        android:textSize="25sp"
        />
 

    <Button
        android:id="@+id/congrats_btn_ok"
        style="@style/PreyButton2.Large"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:text="@string/go_to_congratulations" />

</RelativeLayout>