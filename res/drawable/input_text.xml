<?xml version="1.0" encoding="utf-8"?>
  


<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item 
        
        android:bottom="0dp"
        android:top="0dp"
        
        >
        <shape android:shape="rectangle" >
            <gradient
                android:angle="-90"
                android:centerColor="@color/fb_input_border_center"
                android:endColor="@color/fb_input_border_end"
                android:startColor="@color/fb_input_border_start" />

            <corners android:radius="1dp" />
        </shape>
    </item>
    <item
         android:state_pressed="true"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF" />

            <corners android:radius="1dp" />

        </shape>
    </item>
      
    
    

</layer-list>
 
