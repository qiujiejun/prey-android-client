<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">       
        <shape>
             <corners
                android:radius="40dp" /><!-- 20 60 -->
             <gradient   
               
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/fb_border_start"
              
                 />          
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <solid 
                android:color="@color/fb_border_start"/>
        </shape>
    </item>
    <item android:state_focused="true">       
